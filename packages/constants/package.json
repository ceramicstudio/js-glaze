{
  "name": "@ceramicstudio/idx-constants",
  "version": "0.6.0",
  "author": "Ceramic Studio",
  "homepage": "https://idx.xyz",
  "license": "(Apache-2.0 OR MIT)",
  "main": "dist/index.js",
  "module": "dist/idx-constants.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "test": "tsdx test",
    "lint": "tsdx lint src test --fix",
    "prepublish": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "eslint-config-3box": "^0.2.0",
    "husky": "^4.3.8",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/idx-constants.cjs.production.min.js",
      "limit": "1 KB"
    },
    {
      "path": "dist/idx-constants.esm.js",
      "limit": "1 KB"
    }
  ]
