  "devDependencies": {
    "@ceramicnetwork/blockchain-utils-linking": "^0.3.0",
    "@ceramicnetwork/common": "^0.17.0",
    "@ceramicnetwork/docid": "^0.5.1",
    "@ethersproject/wallet": "^5.0.12",
    "jest-environment-idx": "^0.6.1",
    "tslib": "^2.1.0",
    "uint8arrays": "^2.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "testEnvironment": "node"
  },
  "size-limit": [
    {
      "path": "dist/idx.cjs.production.min.js",
