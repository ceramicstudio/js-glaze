  "license": "(Apache-2.0 OR MIT)",
  "main": "dist/index.js",
  "module": "dist/idx.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --tsconfig tsconfig.build.json",
