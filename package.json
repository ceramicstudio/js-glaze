{
  "name": "glaze",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "ajv"
    ]
  },
  "scripts": {
    "lerna": "lerna",
    "docs": "typedoc --tsconfig tsconfig.docs.json",
    "test": "jest",
    "lint": "lerna run lint --parallel",
    "build": "yarn turbo run compile && lerna run types",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.120",
    "@swc/jest": "^0.2.15",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.4.1",
    "eslint-config-3box": "^0.4.0",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "turbo": "^1.0.13",
    "typedoc": "0.22.10",
    "typedoc-plugin-markdown": "^3.11.7",
    "typescript": "^4.5.4"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "clean": {},
      "compile": {
        "dependsOn": [
          "^clean"
        ]
      },
      "lint": {}
    }
  }
}
