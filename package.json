  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "del-cli": "^4.0.1",
    "esbuild": "^0.13.13",
    "eslint": "^8.2.0",
    "eslint-config-3box": "^0.4.0",
    "eslint-plugin-jest": "^25.2.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "rollup": "^2.60.0",
    "rollup-plugin-esbuild": "^4.6.0",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.10",
    "typedoc-plugin-markdown": "^3.11.5",
    "typescript": "^4.4.4"
