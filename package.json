{
  "name": "glaze",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "ajv"
    ]
  },
  "scripts": {
    "lerna": "lerna",
    "docs": "lerna run docs --parallel",
    "test": "lerna run test --",
    "lint": "lerna run lint --parallel",
    "build": "lerna run build",
    "prepublish": "lerna run prepublish",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.2",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.31.0",
    "eslint-config-3box": "^0.2.0",
    "eslint-plugin-jest": "^24.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "prettier": "^2.3.0",
    "size-limit": "^5.0.2",
    "tsdx": "^0.14.1",
    "typedoc": "^0.21.4",
    "typedoc-plugin-markdown": "^3.10.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "size-limit": [
    {
      "path": "packages/constants/dist/idx-constants.cjs.production.min.js",
      "limit": "1 KB"
    },
    {
      "path": "packages/constants/dist/idx-constants.esm.js",
      "limit": "1 KB"
    },
    {
      "path": "packages/core/dist/idx.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "packages/core/dist/idx.esm.js",
      "limit": "10 KB"
    },
    {
      "path": "packages/tools/dist/idx-tools.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "packages/tools/dist/idx-tools.esm.js",
      "limit": "100 KB"
    }
  ]
}
